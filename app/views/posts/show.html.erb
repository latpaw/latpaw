<% unless notice.nil? %>
<p id="notice" class="alert alert-info">
<a class="close" data-dismiss="alert">Ã—</a>
<%= notice %>
</p>
<% end %>
  <h1> <%= @post.name %></h1>
  <p><%= social_share_button_tag(@post.name) %></p>
  <%=h time_tag @post.created_at ,:class=>"gray"%>
  
<p>
  <%= image_tag @post.avatar_url(:thumb) %>
  <%= raw markdown.render(@post.content) %>
</p>
<% if can? :destroy, @post %>
<%= link_to 'Destroy', @post , :method=> :delete , :confirm=>"Are you sure to delete ?" %> | 
<% end %>
<% if can? :update, @post %>
<%= link_to 'Edit', edit_post_path(@post) %> |
<% end %>
<%= link_to 'Back', posts_path %>
<br /><br />

<h2>Comments:</h2>
<section class="comment-wrap">
<% @post.comments.each do |comment| %>
<div class="comment">
  <%= link_to 'X', [comment.post, comment],
               :confirm => 'Are you sure?',
               :method => :delete ,
               :class=>'fr'%>
<b>Comment:</b><br />

<%= comment.body %> <br />
<span class="fr">by <%= comment.commenter%></span>
<div class="clear"></div>
</div>
<% end %>
</section>
<br />

<h2>Add a comment:</h2>
<%= form_for([@post,@post.comments.build])  do |f| %>
<div class="field">
  <%= f.label :commenter %>
  <%= f.text_field :commenter ,:class=>"span6"%>
</div>
<div class="field">
  <%= f.label :body%>
  <%= f.text_area :body, :class=>"span6 commentbody"%>
</div>
<div class="actions">
  <%= f.submit :class=>"btn btn-primary"%>
</div>
<% end %>


