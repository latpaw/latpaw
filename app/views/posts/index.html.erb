<h1>Listing posts</h1>
<article>
<% @posts.each do |post| %>
  <section>
    <h3><%= link_to post.name , post %></h3>
    <p><%= time_tag post.created_at %></p>
    <p><%= post.content %></p>
    <p class="sed"><%= link_to 'Show', post %> | <%= link_to 'Edit', edit_post_path(post) %> | <%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></p>
  </section>
<% end %>
</article>

<br />
<% if can? :new, @post %>
<%= link_to 'New Post', new_post_path %>
<% end %>
