<% content_for :title do %>
Linux 命令大全,集锦
<% end %>
<h2>Linux命令</h2>
<% @commands.each do |c|%>
<div class="command"><p><%= link_to c.name, c %> </p> <p><b>功能描述:</b><%= raw(c.desc) %></p></div>
<%end%>

<%= form_for(@command) do |f| %>
<div class="field">

    <%= f.text_field :name,:class=>"span10",:placeholder=>"命令" %>


    <%= f.text_area :desc,:class=>"span10",:id=>"commdesc",:placeholder=>"描述" %>


    <%= f.submit "", :value=>"添加" %>
  </div>

	<% end %>